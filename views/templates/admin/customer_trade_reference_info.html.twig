<div class="col col-6">
  <div class="card customer-personal-informations-card">
    <h3 class="card-header">
      <i class="material-icons">sell</i>
      Customer Trade Reference 
      {% if customerTradeReference %}
        <a href="{{ getAdminLink('AdminCustomerTradeReference', true, {'id_customer_trade_reference': customerTradeReference.id_customer_trade_reference, 'updatecustomer_trade_reference':1, 'back': app.request.uri}) }}"
          class="tooltip-link float-right"
          data-toggle="pstooltip"
          title=""
          data-placement="top"
          data-original-title="{{ 'Edit'|trans({}, 'Admin.Actions') }}"
        >
          <i class="material-icons">edit</i> 
        </a>
      {% else %}
        <a href="{{ getAdminLink('AdminCustomerTradeReference', true, {'id_customer': customer.id, 'addcustomer_application':1, 'back': app.request.uri}) }}"
          class="tooltip-link float-right"
          data-toggle="pstooltip"
          title=""
          data-placement="top"
          data-original-title="{{ 'Add'|trans({}, 'Admin.Actions') }}"
        >
          <i class="material-icons">add_circle</i>
        </a>
      {% endif %}
    </h3>
    <div class="card-body">

      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Name'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          {{ customerTradeReference.name }}
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Email'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          <a href="mailto:{{ customerTradeReference.email }}">
            {{ customerTradeReference.email }}
          </a>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Phone'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          <a href="tel:{{ customerTradeReference.phone }}">
            {{ customerTradeReference.phone }}
          </a>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Phone mobile'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          <a href="tel:{{ customerTradeReference.phone_mobile }}">
            {{ customerTradeReference.phone_mobile }}
          </a>
        </div>
      </div>

      <div class="row mb-1">
        <div class="col-4 text-right">
          {{ 'Buyer Group'|trans({}, 'Admin.Global') }}
        </div>
        <div class="col-8">
          {{ customerTradeReference.buyer_group }}
        </div>
      </div>

    </div>
  </div>
</div>