<div class="col col-6">
  <div class="card customer-personal-informations-card">
    <h3 class="card-header">
      <i class="material-icons">account_balance</i>
      Customer Bank Info 
      {% if customerBank %}
        <a href="{{ getAdminLink('AdminCustomerBank', true, {'id_customer_bank': customerBank.id_customer_bank, 'updatecustomer_bank':1, 'back': app.request.uri}) }}"
          class="tooltip-link float-right"
          data-toggle="pstooltip"
          title=""
          data-placement="top"
          data-original-title="{{ 'Edit'|trans({}, 'Admin.Actions') }}"
        >
          <i class="material-icons">edit</i> 
        </a>
      {% else %}
        <a href="{{ getAdminLink('AdminCustomerBank', true, {'id_customer': customer.id, 'addcustomer_bank':1, 'back': app.request.uri}) }}"
          class="tooltip-link float-right"
          data-toggle="pstooltip"
          title=""
          data-placement="top"
          data-original-title="{{ 'Add'|trans({}, 'Admin.Actions') }}"
        >
          <i class="material-icons">add_circle</i>
        </a>
      {% endif %}
    </h3>
    <div class="card-body">
      {% if customerBank %}
        <div class="row mb-1">
          <div class="col-4 text-right">
            {{ 'Name'|trans({}, 'Admin.Global') }}
          </div>
          <div class="col-8">
            {{ customerBank.name }}
          </div>
        </div>

        <div class="row mb-1">
          <div class="col-4 text-right">
            {{ 'Address'|trans({}, 'Admin.Global') }}
          </div>
          <div class="col-8">
            {{ customerBank.address }}
          </div>
        </div>

        <div class="row mb-1">
          <div class="col-4 text-right">
            {{ 'IBAN'|trans({}, 'Admin.Global') }}
          </div>
          <div class="col-8">
            {{ customerBank.iban }}
          </div>
        </div>

        <div class="row mb-1">
          <div class="col-4 text-right">
            {{ 'Swift'|trans({}, 'Admin.Global') }}
          </div>
          <div class="col-8">
            {{ customerBank.swift }}
          </div>
        </div>
      {% endif %}
    </div>
  </div>
</div>